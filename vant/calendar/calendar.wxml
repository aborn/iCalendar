<view class="van-calendar">
  <header subtitle="{{ subtitle }}" showSubtitle="{{ showSubtitle }}" showToday="{{showToday}}" currentDate="{{ currentDate }}" bind:switchToday="switch2Today">
    <slot name="title" slot="title"></slot>
  </header>

  <swiper circular current="{{ frameIndex }}" bindchange="changeFrame" style="height:400px">
    <swiper-item item-id="frame_id_0">
      <scroll-view class="van-calendar__body" scroll-y style="height: auto">
        <month id="month0" class="month" data-date="{{ cDatas[0] }}" date="{{ cDatas[0] }}" type="{{ type }}"
          color="{{ color }}" showMark="{{ showMark }}" formatter="{{ formatter }}" rowHeight="{{ rowHeight }}"
          currentDate="{{ currentDate }}" showSubtitle="{{ showSubtitle }}" bind:click="onClickDay" />
      </scroll-view>
    </swiper-item>

    <swiper-item item-id="frame_id_1">
      <scroll-view class="van-calendar__body" scroll-y style="height: auto">
        <month id="month1" class="month" data-date="{{ cDatas[1] }}" date="{{ cDatas[1] }}" type="{{ type }}"
          color="{{ color }}" showMark="{{ showMark }}" formatter="{{ formatter }}" rowHeight="{{ rowHeight }}"
          currentDate="{{ currentDate }}" showSubtitle="{{ showSubtitle }}" bind:click="onClickDay" />
      </scroll-view>
    </swiper-item>

    <swiper-item item-id="frame_id_2">
      <scroll-view class="van-calendar__body" scroll-y style="height: auto">
        <month id="month2" class="month" data-date="{{ cDatas[2] }}" date="{{ cDatas[2] }}" type="{{ type }}"
          color="{{ color }}" showMark="{{ showMark }}" formatter="{{ formatter }}" rowHeight="{{ rowHeight }}"
          currentDate="{{ currentDate }}" showSubtitle="{{ showSubtitle }}" bind:click="onClickDay" />
      </scroll-view>

    </swiper-item>
  </swiper>
</view>